<h1>Editing Book</h1>

<%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= @book.errors.count %> errors prohibited this book from being saved:
    </h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <% if @book.errors.any?(:title) %>
    <div class="field_with_errors">
      <label>Title</label>
    </div>
    <div class="field_with_errors">
      <%= f.text_field :title %>
    </div>
  <% else %>
    <label>Title</label>
    <%= f.text_field :title %>
  <% end %>
</div>

<div class="field">
  <% if @book.errors.any?(:body) %>
    <div class="field_with_errors">
      <label>Body</label>
    </div>
    <div class="field_with_errors">
      <%= f.text_area :body %>
    </div>
  <% else %>
    <label>Body</label>
    <%= f.text_area :body %>
  <% end %>
</div>

<div class="action">
  <%= f.submit 'Update Book' %>
</div>

<% end %>



